{
  "expo": {
    "name": "CaptureRide",
    "slug": "CaptureRide",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/captureride-logo.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./src/assets/images/captureride-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "newArchEnabled": true
    },
    "android": {
      "newArchEnabled": true,
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/captureride-logo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.anonymous.CaptureRide"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/images/captureride-logo.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Capture Ride to access your camera",
          "microphonePermission": "Allow Capture Ride to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
